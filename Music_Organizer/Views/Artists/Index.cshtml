@{
  Layout = "_Layout";
}

@using MusicOrganizer.Models;

<h1>Artists</h1>

@if (@Model.Count == 0)
{
  <h3>No artist have been added yet!</h3>
} 
else
{
  <form action="/artists/search" method="get">
    <label for="search">Search for Artist:</label>
    <input type="text" id="person" name="person">
    <button type="submit">Find</button>
  </form>
}

@foreach (Artist artist in Model)
{
  <h3><a href='/artists/@artist.Id'>@artist.Name</a></h3>
}

<p><a href='/'>Back home</a></p>